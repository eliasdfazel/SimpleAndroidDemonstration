<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogueView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="11dp"
    android:background="@color/black">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="3dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/dialogueTitle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <RelativeLayout
            android:id="@+id/teardropShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/dialogueTitle">

            <ImageView
                android:id="@+id/teardropImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/teardropText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/teardropImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="string/droplet"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circleShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/teardropShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/circleImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/circleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/circleImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="string/circle"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/squareShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/circleShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/squareImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/squareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/squareImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="string/square"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/squircleShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/squareShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/squircleImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/squircleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/squircleImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="string/squircle"
                android:textSize="17sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/noShape"
            android:layout_width="113dp"
            android:layout_height="49dp"
            android:layout_below="@id/squircleShape"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:text="string/noshape"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/customIconPack"
            android:layout_width="173dp"
            android:layout_height="49dp"
            android:layout_below="@id/squircleShape"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:text="string/iconPack"
            android:textSize="12sp"/>

    </RelativeLayout>
</ScrollView>